{
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "semi": false,
                "singleQuote": true
            }
        },
        {
            "files": "*.js",
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "singleQuote": true
            }
        }
    ]
}